{
  "scopeName": "source.sld",
  "injectionSelector": "L:source.js, L:source.ts T:template-string.sld",
  "patterns": [{ "include": "#xml" }],
  "repository": {
    "xml": {
      "patterns": [

        {
          "begin": "<\/?(?=[A-Z][\\w\\-\\.]*)",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.tag.sld" }
          },
          "end": "(?=>)",
          "patterns": [
            {
              "name": "entity.name.class.sld",
              "match": "[A-Z][\\w\\-\\.]*"
            },
            {
              "name": "variable.parameter.sld",
              "match": "[a-zA-Z_][\\w\\-\\.]*="
            },
            {
              "name": "variable.parameter.boolean.sld",
              "match": "[a-zA-Z_][\\w\\-\\.]*"
            },
            {
              "name": "string.quoted.sld",
              "match": "\"[^\"]*\"|'[^']*'"
            },
            {
              "name": "punctuation.definition.tag.sld",
              "match": "/"
            }
          ]
        },
        {
          "begin": "<\/?(?=[a-z][\\w\\-\\.]*)",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.tag.sld" }
          },
          "end": "(?=>)",
          "patterns": [
            {
              "name": "entity.name.tag.sld",
              "match": "(?<=<\/?)[a-z][\\w\\-\\.]*"
            },
            {
              "name": "variable.parameter.sld",
              "match": "[a-zA-Z_][\\w\\-\\.]*="
            },
            {
              "name": "variable.parameter.boolean.sld",
              "match": "[a-zA-Z_][\\w\\-\\.]*"
            },
            {
              "name": "string.quoted.sld",
              "match": "\"[^\"]*\"|'[^']*'"
            },
            {
              "name": "punctuation.definition.tag.sld",
              "match": "/"
            }
          ]
        },
        {
          "name": "variable.parameter.boolean.sld",
          "match": "[a-zA-Z_][\\w\\-\\.]*"
        },
        {
          "name": "string.quoted.sld",
          "match": "\"[^\"]*\"|'[^']*'"
        },
        {
          "name": "punctuation.definition.tag.sld",
          "match": "<|>"
        }
      ]
    }
  }
}
