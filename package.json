{
  "name": "vscode-sld",
  "displayName": "sld - solid-js Tagged Templates",
  "description": "Syntax highlighting for sld tagged template literals with XML-like syntax.",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "source.js",
          "source.mjs",
          "source.jsx",
          "source.ts",
          "source.mts",
          "source.tsx"
        ],
        "scopeName": "inline.sld",
        "path": "./syntaxes/inline-sld.json"
      },
      {
        "scopeName": "source.sld",
        "path": "./syntaxes/sld.json"
      }
    ],
    "formatters": [
      {
        "id": "sld Formatter",
        "languages": [
          "javascript",
          "typescript"
        ]
      }
    ]
  },
  "dependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/standalone": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "html5parser": "^2.0.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@vscode/test-web": "^0.0.73",
    "esbuild": "^0.25.9"
  },
  "scripts": {
    "build": "esbuild ./src/extension.ts --bundle --format=cjs --outfile=./dist/extension.js --external:vscode",
    "watch": "esbuild ./src/extension.ts --bundle --format=cjs --outfile=./dist/extension.js --external:vscode --watch",
    "prepublish": "npm run build",
    "test": "vscode-test-web --extensionDevelopmentPath=. ./test"
  }
}
